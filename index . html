<script>
function getAnswer() {
    var q = document.getElementById("question").value.toLowerCase();
    var ans = "";
    
    if(q.includes("college fee")) {
        ans = "Tuition Fee: ₹50,000/year, Library Fee: ₹2,000/year, Exam Fee: ₹1,500/semester";
    } else if(q.includes("canteen")) {
        ans = "Tea ₹10, Idli ₹15, Sandwich ₹30, Meal ₹60";
    } else if(q.includes("library")) {
        ans = "Mathematics by R.D. Sharma - Available, Physics by H.C. Verma - Available, DBMS by Korth - Available";
    } else if(q.includes("bus")) {
        ans = "Route A ₹500/month, Route B ₹600/month, Route C ₹700/month";
    } else {
        ans = "Sorry, I don't have info on that. Please ask about Fees, Canteen, Library, or Bus.";
    }
    
    document.getElementById("answer").innerText = ans;
}
</script>

